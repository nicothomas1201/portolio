---
import IconVincule from './icons/IconVincule.astro'

interface Props {
  name: string
  url: string
  description: string
  stars: string
}

const { name, url, description } = Astro.props
---

<li class="card">
  <a href={url} target="_blank">
    <h2>
      {name}
    </h2>

    <IconVincule className="icon" width={18} height={18} />
  </a>

  <p>
    {description}
  </p>
</li>

<style>
  .card {
    border-block-end: 1px solid #4646467a;
    a {
      color: #ffffff;
      text-decoration: none;
      display: flex;
      gap: 8px;
      align-items: center;

      &:hover .icon {
        opacity: 1;
      }

      .icon {
        transition: opacity 0.2s ease;
        opacity: 0;
      }
    }
  }
</style>
